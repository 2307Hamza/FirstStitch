<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?colorSurface">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fabricItem"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageViewDummypic"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_person_24px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="?colorPrimary" />

        <TextView
            android:id="@+id/rowusername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="User name"
            android:textAlignment="center"
            android:textColor="?colorOnSurface"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/imageViewDummypic"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/rowphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="4dp"
            android:text="0123-1231231"
            android:textAlignment="center"
            android:textColor="?colorOnBackground"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/imageViewDummypic"
            app:layout_constraintTop_toBottomOf="@id/rowusername" />

        <TextView
            android:id="@+id/rowusertype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="Customer"
            android:textAlignment="center"
            android:textColor="?colorOnSecondary"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/rowphone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/rowusername" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/separatormain"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>